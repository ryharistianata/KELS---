using namespace std;

void LOAD();
void registration();
void login();
void PUNTEN();
void TA();


void LOAD(){
    initscr();

    curs_set(0);
    
    string loading = "=== || LOADING ||                   ";

    for(int i = 0; i < 27; i++){
        mvprintw(2,i, "=");
        mvprintw(3,i + 5, "%c", loading[i]);
        mvprintw(4,i + 2, "===");
        mvprintw(5,i + 5, "%c", loading[i]); 
        mvprintw(6,i, "=");

        refresh();
        Sleep(100);
    }

    for(int i = 1; i <= 100; i++){
        mvprintw(3, 23, "%d", i);
        mvprintw(5, 23, "%d", i);
        mvprintw(3, 26, "%%");
        mvprintw(5, 26, "%%");
        refresh();
        Sleep(50);
    }
void registration(){
    ofstream myFile, acclist;
    string userReg;

    system("cls");
    cout << " ================================ " << endl;
    cout << "   ====       REGISTRASI       ==== " << endl;
    cout << "     ================================= " << endl;
    cout << "\n";
    cout << "======================" << endl;
    cout << "   == ENTER ID : "; cin >> userReg;

    cout << endl;

    myFile.open(userReg + ".txt");
    myFile << 0;
    myFile.close();

    acclist.open("ListAccount.txt", ios::app);
    acclist << userReg << endl;
    acclist.close();

    system("cls");
    cout << "===============================" << endl;
    cout << "   == REGISTRASI BERHASIL ==" << endl;
    cout << "===============================" << endl;

    Sleep(2000);
    PUNTEN();
}

void login(){
    ifstream myFile;
    string userLog;
    string userData;

    bool exist = false;

    system("cls");
    cout << "      ============================= " << endl;
    cout << "        ====      LOGIN      ==== " << endl;
    cout << "   =================================== " << endl;
    cout << "    ==                             ==   " << endl;
    cout << "     ==                           ==   " << endl;
    cout << "      ==                         ==   " << endl;
    cout << "      ==                         ==   " << endl;
    cout << "      ==                         ==   " << endl;
    cout << "      ==                         ==   " << endl;
    cout << "   =================================== " << endl;
    cout << "   ==             WELL              ==" << endl;
    cout << " =======================================" << endl;
    cout << "MASUKAN ID : "; cin >> userLog;

    cout << endl;

    myFile.open("ListAccount.txt");
    while( myFile >> userData){
    if(userData == userLog){
        exist = true;
        }
    }
    myFile.close();

    if(exist == true){
        system("cls");
        cout << "=========================================" << endl;
        cout << "   ==        LOGIN BERHASIL         ==   " << endl;
        cout << "   ==            ANZAYY             ==   " << endl;
        cout << "=========================================" << endl;

        Sleep(2000);
    } else {
        system("cls");
        cout << "=========================================" << endl;
        cout << "   ==         LOGIN ERROR           ==   " << endl;
        cout << "   ==          COBA LAGI            ==   " << endl;
        cout << "=========================================" << endl;

        Sleep(2000);
        PUNTEN();
    }
}

void PUNTEN(){
    int pil;
    system ("cls");

    cout << "\t\t\t===============================" << endl;
    cout << "\t\t\t\t==== PUNTEN ======"  << endl;
    cout << "\t\t\t    ===============================" << endl;
    cout << "\n";
    cout << " =================================" << endl;
    cout << "        = 1 =  REGISTRASI == " << endl;
    cout << "      ==================================" << endl;
    cout << "             = 2 = LOGIN == "<< endl;  
    cout << "   ============================" << endl; 
    cout << "\n\n";
    cout << " ++ INPUT UR CHOICE : "; cin >> pil;

    switch(pil){
            case 1:
            registration();
            break;
        case 2:
            login();
            break;
    }

}
    clear();
    curs_set(1);
    endwin();
}
